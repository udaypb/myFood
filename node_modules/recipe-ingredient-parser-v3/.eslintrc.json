{
  "extends": "eslint:recommended",
  "env": {
    "node": true,
    "es6": true,
    "mocha": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "plugins": [
    "mocha"
  ],
  "rules": {
    "semi": "error",
    "no-extra-boolean-cast": "off",
    "no-useless-escape": "off"
  }
}
